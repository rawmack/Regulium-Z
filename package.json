{
  "name": "regulium-z",
  "version": "1.0.0",
  "description": "AI-powered regulatory compliance checking application",
  "private": true,
  "workspaces": [
    "backend",
    "frontend"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:backend": "npm run dev --workspace=backend",
    "dev:frontend": "npm run dev --workspace=frontend",
    "build": "npm run build --workspaces",
    "build:backend": "npm run build --workspace=backend",
    "build:frontend": "npm run build --workspace=frontend",
    "start": "concurrently \"npm run start:backend\" \"npm run start:frontend\"",
    "start:backend": "npm run start --workspace=backend",
    "start:frontend": "npm run preview --workspace=frontend",
    "install:all": "npm install && npm install --workspace=backend && npm install --workspace=frontend",
    "test": "npm run test:backend && npm run test:frontend",
    "test:backend": "npm run test --workspace=backend",
    "test:frontend": "npm run test:run --workspace=frontend",
    "test:watch": "concurrently \"npm run test:watch:backend\" \"npm run test:frontend\"",
    "test:watch:backend": "npm run test:watch --workspace=backend",
    "test:coverage": "npm run test:coverage:backend && npm run test:coverage:frontend",
    "test:coverage:backend": "npm run test:coverage --workspace=backend",
    "test:coverage:frontend": "npm run test:coverage --workspace=frontend",
    "test:ci": "npm run test:ci:backend && npm run test:ci:frontend",
    "test:ci:backend": "npm run test:ci --workspace=backend",
    "test:ci:frontend": "npm run test:run --workspace=frontend",
    "lint": "npm run lint --workspaces",
    "lint:backend": "npm run lint --workspace=backend",
    "lint:frontend": "npm run lint --workspace=frontend"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "keywords": [
    "compliance",
    "regulatory",
    "ai",
    "gpt",
    "react",
    "typescript",
    "express"
  ],
  "author": "",
  "license": "MIT"
}
